<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gauth.android_hikerswatch.MainActivity">

    <TextView
        android:text="Hikers Watch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="114dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorAccent" />

    <TextView
        android:text="Lattitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="42dp"
        android:id="@+id/latTextView"
        android:textColor="@android:color/holo_blue_dark" />

    <TextView
        android:text="Longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/latTextView"
        android:layout_alignEnd="@+id/latTextView"
        android:layout_marginTop="16dp"
        android:id="@+id/lonTextView"
        android:textColor="@color/colorAccent" />

    <TextView
        android:text="Accuracy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lonTextView"
        android:layout_alignStart="@+id/latTextView"
        android:layout_marginStart="12dp"
        android:layout_marginTop="50dp"
        android:id="@+id/accuracyTextView" />

    <TextView
        android:text="Altitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accuracyTextView"
        android:layout_marginTop="43dp"
        android:id="@+id/altitudeTextView"
        android:layout_alignStart="@+id/addressTextView"
        android:layout_alignEnd="@+id/accuracyTextView" />

    <TextView
        android:text="Address Line \n"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:id="@+id/addressTextView"
        android:layout_below="@+id/altitudeTextView"
        android:layout_alignStart="@+id/latTextView" />
</RelativeLayout>
